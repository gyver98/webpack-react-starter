{
  "parser": "babel-eslint",
  "rules": {
    "max-len": [1, 120, 2, {"ignoreComments": true}],
    "prop-types": [0],
    "no-unused-vars": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "quotes": [ 2, "double", "avoid-escape" ],
    // "quote-props": [0]
  },
  "extends": ["airbnb"],
  // fixing issue of Eslint errorring importing jsx without extension
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js",".jsx"]
      }
    }
  },
  "env": {
    "browser": true
  }
}